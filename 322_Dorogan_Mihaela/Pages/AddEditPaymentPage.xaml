<Page x:Class="_322_Dorogan_Mihaela.Pages.AddEditPaymentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование платежа">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TbTitle" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnBack" Content="Назад" Width="80" Height="30"
                            Click="BtnBack_Click" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма редактирования -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" 
                CornerRadius="5" Margin="20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Дата -->
                <Label Grid.Row="0" Grid.Column="0" Content="Дата:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <DatePicker Grid.Row="0" Grid.Column="1" x:Name="DpDate" Height="35" 
                           SelectedDate="{Binding Date}"
                           ToolTip="Дата совершения платежа" Margin="0,5"/>

                <!-- Пользователь -->
                <Label Grid.Row="1" Grid.Column="0" Content="Пользователь:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="1" Grid.Column="1" x:Name="CbUser" Height="35" 
                         DisplayMemberPath="FIO" SelectedValuePath="ID"
                         SelectedValue="{Binding UserID}"
                         ToolTip="Выберите пользователя" Margin="0,5"/>

                <!-- Категория -->
                <Label Grid.Row="2" Grid.Column="0" Content="Категория:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <ComboBox Grid.Row="2" Grid.Column="1" x:Name="CbCategory" Height="35" 
                         DisplayMemberPath="Name" SelectedValuePath="ID"
                         SelectedValue="{Binding CategoryID}"
                         ToolTip="Выберите категорию платежа" Margin="0,5"/>

                <!-- Название -->
                <Label Grid.Row="3" Grid.Column="0" Content="Название:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="TbName" Height="35" 
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Название платежа" Margin="0,5"/>

                <!-- Количество -->
                <Label Grid.Row="4" Grid.Column="0" Content="Количество:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="TbNum" Height="35" 
                         Text="{Binding Num, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Количество единиц" Margin="0,5"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Text="шт." VerticalAlignment="Center"/>

                <!-- Цена -->
                <Label Grid.Row="5" Grid.Column="0" Content="Цена:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="5" Grid.Column="1" x:Name="TbPrice" Height="35" 
                         Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Цена за единицу" Margin="0,5"/>
                <TextBlock Grid.Row="5" Grid.Column="2" Text="руб." VerticalAlignment="Center"/>

                <!-- Итоговая сумма -->
                <Label Grid.Row="6" Grid.Column="0" Content="Итоговая сумма:" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <TextBlock Grid.Row="6" Grid.Column="1" x:Name="TbTotal" FontSize="14" FontWeight="Bold"
                          Foreground="DarkBlue" VerticalAlignment="Center" Margin="0,5"/>

                <!-- Сообщение об ошибках -->
                <TextBlock Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="4" x:Name="TbError" 
                          Foreground="Red" FontSize="11" TextWrapping="Wrap" 
                          Margin="0,10,0,0" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,1,0,0" 
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnSave" Content="💾 Сохранить" Width="120" Height="35"
                        Click="BtnSave_Click" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="BtnCancel" Content="❌ Отмена" Width="100" Height="35"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>