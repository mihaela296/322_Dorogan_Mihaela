<Page x:Class="_322_Dorogan_Mihaela.Pages.UsersManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление пользователями">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1">
            <TextBlock Text="УПРАВЛЕНИЕ ПОЛЬЗОВАТЕЛЯМИ" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Padding="20"/>
        </Border>

        <!-- Панель инструментов -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush1}" Padding="10">
            <StackPanel Orientation="Horizontal">

                <!-- Поиск -->
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="TbSearch" Width="200" Height="30" 
                         TextChanged="TbSearch_TextChanged"
                         ToolTip="Поиск по ФИО или логину"/>

                <!-- Фильтр по роли -->
                <TextBlock Text="Роль:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <ComboBox x:Name="CbRoleFilter" Width="120" Height="30"
                          SelectionChanged="CbRoleFilter_SelectionChanged">
                    <ComboBoxItem Content="Все" IsSelected="True"/>
                    <ComboBoxItem Content="Admin"/>
                    <ComboBoxItem Content="User"/>
                </ComboBox>

                <!-- Сортировка -->
                <TextBlock Text="Сортировка:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                <ComboBox x:Name="CbSort" Width="150" Height="30"
                          SelectionChanged="CbSort_SelectionChanged">
                    <ComboBoxItem Content="По ФИО (А-Я)"/>
                    <ComboBoxItem Content="По ФИО (Я-А)"/>
                    <ComboBoxItem Content="По дате регистрации"/>
                </ComboBox>

                <!-- Кнопки -->
                <Button x:Name="BtnClearFilters" Content="Очистить фильтры" 
                        Click="BtnClearFilters_Click" Margin="10,0,5,0"/>
                <Button x:Name="BtnRefresh" Content="Обновить" 
                        Click="BtnRefresh_Click" Margin="5,0,5,0"/>
                <Button x:Name="BtnAddUser" Content="Добавить пользователя" 
                        Click="BtnAddUser_Click" Margin="5,0,5,0"/>
                <Button x:Name="BtnExportUsers" Content="Экспорт в Excel" 
                        Click="BtnExportUsers_Click" Margin="5,0,5,0"/>
            </StackPanel>
        </Border>

        <!-- Таблица пользователей -->
        <DataGrid Grid.Row="2" x:Name="DgUsers" AutoGenerateColumns="False" 
                  IsReadOnly="True" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding Login}" Width="120"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FIO}" Width="200"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="80"/>

                <!-- Кнопки действий -->
                <DataGridTemplateColumn Header="Действия" Width="200">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="✏️" ToolTip="Редактировать" 
                                        Click="BtnEditUser_Click" 
                                        Margin="2" Width="30" Height="30"/>
                                <Button Content="🗑️" ToolTip="Удалить" 
                                        Click="BtnDeleteUser_Click" 
                                        Margin="2" Width="30" Height="30"/>
                                <Button Content="🔑" ToolTip="Сбросить пароль" 
                                        Click="BtnResetPassword_Click" 
                                        Margin="2" Width="30" Height="30"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Нижняя панель -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryBrush1}" Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="BtnBack" Content="Назад" Width="100" Height="35"
                        Click="BtnBack_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>