<Page x:Class="_322_Dorogan_Mihaela.Pages.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Панель администратора">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Шапка -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" BorderBrush="{StaticResource TextBrushBlack}" 
                BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TbAdminWelcome" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnChangePass" Content="Смена пароля" Width="120" Height="30"
                            Click="BtnChangePass_Click" Margin="0,0,10,0"/>
                    <Button x:Name="BtnLogout" Content="Выйти" Width="80" Height="30"
                            Click="BtnLogout_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Панель управления системой" FontSize="16" FontWeight="Bold" 
                      HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <WrapPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <!-- Управление пользователями -->
                <Border Width="200" Height="150" Background="{StaticResource SecondaryBrush2}" 
                        BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" CornerRadius="5" Margin="10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Пользователи" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button x:Name="BtnManageUsers" Content="Управление" Width="120" Height="35" 
                                Click="BtnManageUsers_Click" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Управление категориями -->
                <Border Width="200" Height="150" Background="{StaticResource SecondaryBrush2}" 
                        BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" CornerRadius="5" Margin="10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Категории" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button x:Name="BtnManageCategories" Content="Управление" Width="120" Height="35" 
                                Click="BtnManageCategories_Click" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Управление платежами -->
                <Border Width="200" Height="150" Background="{StaticResource SecondaryBrush2}" 
                        BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" CornerRadius="5" Margin="10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Платежи" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button x:Name="BtnManagePayments" Content="Управление" Width="120" Height="35" 
                                Click="BtnManagePayments_Click" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Отчеты и диаграммы -->
                <Border Width="200" Height="150" Background="{StaticResource SecondaryBrush2}" 
                        BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" CornerRadius="5" Margin="10">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Аналитика" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                        <Button x:Name="BtnAnalytics" Content="Диаграммы" Width="120" Height="35" 
                                Click="BtnAnalytics_Click" FontWeight="Bold" Margin="0,5,0,0"/>
                        <Button x:Name="BtnReports" Content="Отчеты" Width="120" Height="35" 
                                Click="BtnReports_Click" Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>
            </WrapPanel>
        </Grid>
    </Grid>
</Page>