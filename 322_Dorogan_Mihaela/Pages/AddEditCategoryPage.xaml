<Page x:Class="_322_Dorogan_Mihaela.Pages.AddEditCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Редактирование категории">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="TbTitle" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnBack" Content="Назад" Width="80" Height="30"
                            Click="BtnBack_Click" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Форма редактирования -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" 
                CornerRadius="5" Margin="20" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Название категории -->
                <Label Grid.Row="0" Grid.Column="0" Content="Название:*" FontWeight="Bold" 
                       VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" x:Name="TbName" Height="35" 
                         Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                         ToolTip="Название категории платежей" Margin="0,5"/>

                <!-- Сообщение об ошибках -->
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" x:Name="TbError" 
                          Foreground="Red" FontSize="11" TextWrapping="Wrap" 
                          Margin="0,10,0,0" Visibility="Collapsed"/>

                <!-- Информация о категории -->
                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                           Orientation="Vertical" Margin="0,20,0,0">
                    <TextBlock Text="Информация о категории:" FontWeight="Bold" Margin="0,0,0,10"/>

                    <Border Background="{StaticResource SecondaryBrush1}" Padding="10" CornerRadius="3">
                        <StackPanel>
                            <TextBlock x:Name="TbCategoryInfo" TextWrapping="Wrap" FontSize="11"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель управления -->
        <Border Grid.Row="2" Background="{StaticResource SecondaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,1,0,0" 
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnSave" Content="💾 Сохранить" Width="120" Height="35"
                        Click="BtnSave_Click" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="BtnCancel" Content="❌ Отмена" Width="100" Height="35"
                        Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>