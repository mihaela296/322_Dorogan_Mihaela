<Page x:Class="_322_Dorogan_Mihaela.Pages.AddEditCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Добавление/редактирование категории">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1">
            <TextBlock x:Name="TbTitle" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Padding="20"/>
        </Border>

        <!-- Форма -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" Background="{StaticResource SecondaryBrush2}" 
                    BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" 
                    CornerRadius="5" VerticalAlignment="Center">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Название категории -->
                    <Label Grid.Row="0" Content="Название категории:*" FontWeight="Bold" Margin="0,5"/>
                    <TextBox Grid.Row="1" x:Name="TbName" Height="35" Margin="0,0,0,15"
                             Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                             ToolTip="Введите название категории (2-50 символов)"/>

                    <!-- Сообщение об ошибках -->
                    <TextBlock Grid.Row="2" x:Name="TbError" Foreground="Red" FontSize="11" 
                              TextWrapping="Wrap" Margin="0,0,0,15" Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" 
                                HorizontalAlignment="Center" Margin="0,20,0,0">
                        <Button x:Name="BtnSave" Content="СОХРАНИТЬ" 
                                Width="120" Height="40" Click="BtnSave_Click" 
                                FontWeight="Bold" FontSize="12" Margin="0,0,10,0"/>
                        <Button x:Name="BtnCancel" Content="ОТМЕНА" Width="100" Height="40" 
                                Click="BtnCancel_Click"/>
                    </StackPanel>

                    <!-- Кнопка Назад -->
                    <StackPanel Grid.Row="4" Orientation="Horizontal" 
                                HorizontalAlignment="Left" Margin="0,20,0,0">
                        <Button x:Name="BtnBack" Content="Назад" Width="80" Height="30" 
                                Click="BtnBack_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>