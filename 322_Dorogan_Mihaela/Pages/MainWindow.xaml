<Window x:Class="_322_Dorogan_Mihaela.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Система платежей" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1">
            <StackPanel Orientation="Horizontal">
                <Button x:Name="BtnBack" Content="← Назад" Width="80" Height="30" Margin="10,0" 
                        Click="BtnBack_Click" FontSize="11"/>
                <TextBlock x:Name="TbCurrentPage" Text="Система платежей" VerticalAlignment="Center" 
                          FontSize="14" FontWeight="Bold" Margin="20,0"/>
            </StackPanel>
        </Border>

        <!-- Основной контент -->
        <Frame x:Name="MainFrame" Grid.Row="1" NavigationUIVisibility="Hidden" 
               Navigated="MainFrame_Navigated"/>

        <!-- Нижняя панель -->
        <Border Grid.Row="2" Background="{StaticResource PrimaryBrush1}" BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,1,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="TbDateTime" VerticalAlignment="Center" Margin="10,0" 
                          FontSize="11" TextWrapping="NoWrap"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>