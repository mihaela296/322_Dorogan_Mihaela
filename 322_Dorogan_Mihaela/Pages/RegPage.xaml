<Page x:Class="_322_Dorogan_Mihaela.Pages.RegPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Регистрация">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="РЕГИСТРАЦИЯ ПОЛЬЗОВАТЕЛЯ" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="20"/>

        <!-- Форма регистрации -->
        <Border Grid.Row="1" Width="400" Height="450" HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource SecondaryBrush2}" BorderBrush="{StaticResource TextBrushBlack}" 
                BorderThickness="1" CornerRadius="5">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Логин -->
                <Label Grid.Row="0" Content="Логин:" FontWeight="Bold" Margin="0,5"/>
                <TextBox Grid.Row="1" x:Name="TbLogin" Height="30" Margin="0,0,0,10"
                         ToolTip="Придумайте логин для входа в систему"/>

                <!-- Пароль -->
                <Label Grid.Row="2" Content="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="3" x:Name="PbPassword" Height="30" Margin="0,0,0,10"
                             ToolTip="Пароль должен содержать минимум 6 символов, только латинские буквы и цифры"/>

                <!-- Подтверждение пароля -->
                <Label Grid.Row="4" Content="Подтверждение пароля:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="5" x:Name="PbConfirmPassword" Height="30" Margin="0,0,0,10"
                             ToolTip="Повторите введенный пароль"/>

                <!-- ФИО -->
                <Label Grid.Row="6" Content="ФИО:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox Grid.Row="7" x:Name="TbFIO" Height="30" Margin="0,0,0,15"
                         ToolTip="Введите ваше полное имя"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnRegister" Content="Зарегистрироваться" Width="150" Height="35"
                            Click="BtnRegister_Click" FontWeight="Bold" Margin="0,0,10,0"/>
                    <Button x:Name="BtnCancel" Content="Отмена" Width="80" Height="35"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>