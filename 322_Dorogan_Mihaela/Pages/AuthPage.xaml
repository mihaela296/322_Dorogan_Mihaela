<Page x:Class="YourProjectName.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="ВХОД В СИСТЕМУ" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="20"/>

        <!-- Форма авторизации -->
        <Border Grid.Row="1" Width="350" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource SecondaryBrush2}" BorderBrush="{StaticResource TextBrushBlack}" 
                BorderThickness="1" CornerRadius="5">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Логин -->
                <Label Grid.Row="0" Content="Логин:" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBox Grid.Row="1" x:Name="TbLogin" Height="30" Margin="0,0,0,10"
                         ToolTip="Введите ваш логин"/>

                <!-- Пароль -->
                <Label Grid.Row="2" Content="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="3" x:Name="PbPassword" Height="30" Margin="0,0,0,15"
                             ToolTip="Введите ваш пароль"/>

                <!-- Капча -->
                <StackPanel Grid.Row="4" x:Name="SpCaptcha" Visibility="Collapsed" 
                            Orientation="Horizontal" Margin="0,0,0,10">
                    <Label Content="Капча:" FontWeight="Bold" VerticalAlignment="Center"/>
                    <Border BorderThickness="1" BorderBrush="Black" Margin="5,0" Background="White">
                        <TextBlock x:Name="TbCaptcha" Width="100" Height="25" Padding="2"
                                  TextAlignment="Center" VerticalAlignment="Center"
                                  FontWeight="Bold" FontSize="12" Background="White"/>
                    </Border>
                    <TextBox x:Name="TbCaptchaInput" Width="100" Height="25" 
                             ToolTip="Введите текст с картинки" MaxLength="6"/>
                </StackPanel>

                <!-- Кнопки -->
                <StackPanel Grid.Row="5" Orientation="Vertical" VerticalAlignment="Bottom">
                    <Button x:Name="BtnLogin" Content="Войти" Height="35" 
                            Click="BtnLogin_Click" FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="BtnRegister" Content="Регистрация" 
                                Click="BtnRegister_Click" Style="{StaticResource LinkButtonStyle}"/>
                        <TextBlock Text="|" Margin="5,0" VerticalAlignment="Center"/>
                        <Button x:Name="BtnChangePassword" Content="Смена пароля" 
                                Click="BtnChangePassword_Click" Style="{StaticResource LinkButtonStyle}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>