<Page x:Class="_322_Dorogan_Mihaela.Pages.AuthPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Авторизация">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1">
            <TextBlock Text="АВТОРИЗАЦИЯ В СИСТЕМЕ" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Padding="20"/>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Форма авторизации -->
            <Border Grid.Column="1" Background="{StaticResource SecondaryBrush2}" 
                    BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" 
                    CornerRadius="5" VerticalAlignment="Center">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Логин -->
                    <Label Grid.Row="0" Content="Логин:" FontWeight="Bold" Margin="0,5"/>
                    <TextBox Grid.Row="1" x:Name="TbLogin" Height="35" Margin="0,0,0,15"
                             ToolTip="Введите ваш логин" TextChanged="TbLogin_TextChanged"/>

                    <!-- Пароль -->
                    <Label Grid.Row="2" Content="Пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox Grid.Row="3" x:Name="PbPassword" Height="35" Margin="0,0,0,15"
                                 ToolTip="Введите ваш пароль" PasswordChanged="PbPassword_PasswordChanged"/>

                    <!-- Капча -->
                    <StackPanel Grid.Row="4" x:Name="SpCaptcha" Visibility="Collapsed" 
                                Orientation="Vertical" Margin="0,0,0,15">
                        <Label Content="Введите код с картинки:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" BorderThickness="1" BorderBrush="Black" 
                                    Background="White" Margin="0,0,10,0">
                                <TextBlock x:Name="TbCaptcha" Width="150" Height="40" Padding="2"
                                          TextAlignment="Center" VerticalAlignment="Center"
                                          FontWeight="Bold" FontSize="16" Background="White"
                                          Foreground="DarkBlue"/>
                            </Border>

                            <Button Grid.Column="1" Content="🔄" Width="30" Height="30"
                                    Click="BtnRefreshCaptcha_Click" ToolTip="Обновить капчу"/>
                        </Grid>
                        <TextBox x:Name="TbCaptchaInput" Height="35" Margin="0,5,0,0"
                                 ToolTip="Введите текст с картинки" MaxLength="6"
                                 TextChanged="TbCaptchaInput_TextChanged"/>
                    </StackPanel>

                    <!-- Сообщение об ошибках -->
                    <TextBlock Grid.Row="5" x:Name="TbError" Foreground="Red" FontSize="11" 
                              TextWrapping="Wrap" Margin="0,0,0,10" Visibility="Collapsed"/>

                    <!-- Кнопка входа -->
                    <Button Grid.Row="6" x:Name="BtnLogin" Content="ВОЙТИ" Height="40" 
                            Click="BtnLogin_Click" FontWeight="Bold" FontSize="14"
                            Margin="0,0,0,20"/>

                    <!-- Дополнительные ссылки -->
                    <StackPanel Grid.Row="7" Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button x:Name="BtnRegister" Content="Регистрация" 
                                Click="BtnRegister_Click" Style="{StaticResource LinkButtonStyle}"/>
                        <TextBlock Text="|" Margin="10,0" VerticalAlignment="Center"/>
                        <Button x:Name="BtnChangePassword" Content="Смена пароля" 
                                Click="BtnChangePassword_Click" Style="{StaticResource LinkButtonStyle}"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>