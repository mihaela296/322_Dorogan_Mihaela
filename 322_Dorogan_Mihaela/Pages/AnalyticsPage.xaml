<Page x:Class="_322_Dorogan_Mihaela.Pages.AnalyticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Аналитика платежей">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и управление -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="АНАЛИТИКА ПЛАТЕЖЕЙ" FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0">
                    <Button x:Name="BtnBack" Content="Назад" Width="80" Height="30"
                            Click="BtnBack_Click" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="10">

            <!-- Диаграмма по категориям -->
            <TabItem Header="📊 По категориям">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Управление -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBrush1}" Margin="10" Padding="10">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="Период:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker x:Name="DpCatStartDate" Width="120" SelectedDateChanged="DateRange_Changed"/>
                            <Label Content="-" VerticalAlignment="Center" Margin="5,0"/>
                            <DatePicker x:Name="DpCatEndDate" Width="120" SelectedDateChanged="DateRange_Changed"/>
                            <Button x:Name="BtnExportCatChart" Content="📈 Экспорт" Width="120" Height="30"
                                    Click="BtnExportCatChart_Click" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Заглушка для диаграммы -->
                    <Border Grid.Row="1" Background="White" Margin="10" BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Диаграмма по категориям будет отображена здесь" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  FontSize="14" Foreground="Gray" TextWrapping="Wrap"
                                  TextAlignment="Center" Margin="20"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Диаграмма по пользователям -->
            <TabItem Header="👥 По пользователям">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Управление -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBrush1}" Margin="10" Padding="10">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="Период:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker x:Name="DpUserStartDate" Width="120" SelectedDateChanged="DateRange_Changed"/>
                            <Label Content="-" VerticalAlignment="Center" Margin="5,0"/>
                            <DatePicker x:Name="DpUserEndDate" Width="120" SelectedDateChanged="DateRange_Changed"/>
                            <Button x:Name="BtnExportUserChart" Content="📈 Экспорт" Width="120" Height="30"
                                    Click="BtnExportUserChart_Click" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Заглушка для диаграммы -->
                    <Border Grid.Row="1" Background="White" Margin="10" BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Диаграмма по пользователям будет отображена здесь" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  FontSize="14" Foreground="Gray" TextWrapping="Wrap"
                                  TextAlignment="Center" Margin="20"/>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Динамика платежей -->
            <TabItem Header="📈 Динамика">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Управление -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBrush1}" Margin="10" Padding="10">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="Период:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <DatePicker x:Name="DpTrendStartDate" Width="120" SelectedDateChanged="DateRange_Changed"/>
                            <Label Content="-" VerticalAlignment="Center" Margin="5,0"/>
                            <DatePicker x:Name="DpTrendEndDate" Width="120" SelectedDateChanged="DateRange_Changed"/>
                            <Button x:Name="BtnExportTrend" Content="📈 Экспорт" Width="120" Height="30"
                                    Click="BtnExportTrend_Click" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Заглушка для диаграммы -->
                    <Border Grid.Row="1" Background="White" Margin="10" BorderBrush="Gray" BorderThickness="1">
                        <TextBlock Text="Диаграмма динамики платежей будет отображена здесь" 
                                  HorizontalAlignment="Center" VerticalAlignment="Center"
                                  FontSize="14" Foreground="Gray" TextWrapping="Wrap"
                                  TextAlignment="Center" Margin="20"/>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>