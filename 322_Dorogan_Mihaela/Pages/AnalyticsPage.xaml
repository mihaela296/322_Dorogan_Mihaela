<Page x:Class="_322_Dorogan_Mihaela.Pages.AnalyticsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:winforms="clr-namespace:System.Windows.Forms.Integration;assembly=WindowsFormsIntegration"
      xmlns:forms="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      Title="Аналитика платежей">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и управление -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="АНАЛИТИКА ПЛАТЕЖЕЙ" FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="0">
                    <Button x:Name="BtnBack" Content="Назад" Width="80" Height="30"
                            Click="BtnBack_Click" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <TabControl Grid.Row="1" Margin="10">

            <!-- Диаграмма по категориям -->
            <TabItem Header="📊 По категориям">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Управление -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBrush1}" Margin="10" Padding="10">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="Тип диаграммы:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="CmbCatChartType" Width="120" SelectionChanged="ChartType_Changed">
                                <ComboBoxItem Content="Столбчатая" IsSelected="True"/>
                                <ComboBoxItem Content="Круговая"/>
                                <ComboBoxItem Content="Линейная"/>
                            </ComboBox>

                            <Button x:Name="BtnExportCatChart" Content="📈 Экспорт в Excel" Width="150" Height="30"
                                    Click="BtnExportCatChart_Click" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Диаграмма -->
                    <Border Grid.Row="1" Background="White" Margin="10" BorderBrush="Gray" BorderThickness="1">
                        <winforms:WindowsFormsHost x:Name="CatChartHost">
                            <winforms:WindowsFormsHost.Child>
                                <forms:Chart x:Name="ChartCategories"/>
                            </winforms:WindowsFormsHost.Child>
                        </winforms:WindowsFormsHost>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Диаграмма по пользователям -->
            <TabItem Header="👥 По пользователям">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Управление -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBrush1}" Margin="10" Padding="10">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="Топ:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="CmbUserTopCount" Width="80" SelectionChanged="TopCount_Changed">
                                <ComboBoxItem Content="5" IsSelected="True"/>
                                <ComboBoxItem Content="10"/>
                                <ComboBoxItem Content="20"/>
                                <ComboBoxItem Content="Все"/>
                            </ComboBox>

                            <Button x:Name="BtnExportUserChart" Content="📈 Экспорт в Excel" Width="150" Height="30"
                                    Click="BtnExportUserChart_Click" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Диаграмма -->
                    <Border Grid.Row="1" Background="White" Margin="10" BorderBrush="Gray" BorderThickness="1">
                        <winforms:WindowsFormsHost x:Name="UserChartHost">
                            <winforms:WindowsFormsHost.Child>
                                <forms:Chart x:Name="ChartUsers"/>
                            </winforms:WindowsFormsHost.Child>
                        </winforms:WindowsFormsHost>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Динамика платежей -->
            <TabItem Header="📈 Динамика">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Управление -->
                    <Border Grid.Row="0" Background="{StaticResource SecondaryBrush1}" Margin="10" Padding="10">
                        <StackPanel Orientation="Horizontal" Margin="0">
                            <Label Content="Группировка:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <ComboBox x:Name="CmbTrendGroupBy" Width="120" SelectionChanged="GroupBy_Changed">
                                <ComboBoxItem Content="По дням" IsSelected="True"/>
                                <ComboBoxItem Content="По неделям"/>
                                <ComboBoxItem Content="По месяцам"/>
                            </ComboBox>

                            <Button x:Name="BtnExportTrend" Content="📈 Экспорт в Excel" Width="150" Height="30"
                                    Click="BtnExportTrend_Click" Margin="20,0,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Диаграмма -->
                    <Border Grid.Row="1" Background="White" Margin="10" BorderBrush="Gray" BorderThickness="1">
                        <winforms:WindowsFormsHost x:Name="TrendChartHost">
                            <winforms:WindowsFormsHost.Child>
                                <forms:Chart x:Name="ChartTrend"/>
                            </winforms:WindowsFormsHost.Child>
                        </winforms:WindowsFormsHost>
                    </Border>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Page>