<Page x:Class="_322_Dorogan_Mihaela.Pages.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Смена пароля">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="СМЕНА ПАРОЛЯ" FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="20"/>

        <!-- Форма смены пароля -->
        <Border Grid.Row="1" Width="350" Height="350" HorizontalAlignment="Center" VerticalAlignment="Center"
                Background="{StaticResource SecondaryBrush2}" BorderBrush="{StaticResource TextBrushBlack}" 
                BorderThickness="1" CornerRadius="5">
            <Grid Margin="25">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Логин -->
                <Label Grid.Row="0" Content="Логин:" FontWeight="Bold" Margin="0,5"/>
                <TextBox Grid.Row="1" x:Name="TbLogin" Height="30" Margin="0,0,0,10"
                         ToolTip="Введите ваш логин"/>

                <!-- Текущий пароль -->
                <Label Grid.Row="2" Content="Текущий пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="3" x:Name="PbCurrentPassword" Height="30" Margin="0,0,0,10"
                             ToolTip="Введите текущий пароль"/>

                <!-- Новый пароль -->
                <Label Grid.Row="4" Content="Новый пароль:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="5" x:Name="PbNewPassword" Height="30" Margin="0,0,0,10"
                             ToolTip="Новый пароль должен содержать минимум 6 символов, только латинские буквы и цифры"/>

                <!-- Подтверждение нового пароля -->
                <Label Grid.Row="6" Content="Подтверждение:" FontWeight="Bold" Margin="0,0,0,5"/>
                <PasswordBox Grid.Row="7" x:Name="PbConfirmPassword" Height="30" Margin="0,0,0,15"
                             ToolTip="Повторите новый пароль"/>

                <!-- Кнопки -->
                <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:Name="BtnChangePassword" Content="Сменить пароль" Width="150" Height="35"
                            Click="BtnChangePassword_Click" FontWeight="Bold" Margin="0,0,10,0"/>
                    <Button x:Name="BtnCancel" Content="Отмена" Width="80" Height="35"
                            Click="BtnCancel_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>