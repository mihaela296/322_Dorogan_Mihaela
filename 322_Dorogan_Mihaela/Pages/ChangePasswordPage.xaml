<Page x:Class="_322_Dorogan_Mihaela.Pages.ChangePasswordPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Смена пароля">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1">
            <TextBlock Text="СМЕНА ПАРОЛЯ" FontSize="18" FontWeight="Bold" 
                       HorizontalAlignment="Center" Padding="20"/>
        </Border>

        <!-- Форма смены пароля -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" Background="{StaticResource SecondaryBrush2}" 
                    BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="1" 
                    CornerRadius="5" VerticalAlignment="Center">
                <Grid Margin="25">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Логин -->
                    <Label Grid.Row="0" Content="Логин:*" FontWeight="Bold" Margin="0,5"/>
                    <TextBox Grid.Row="1" x:Name="TbLogin" Height="35" Margin="0,0,0,10"
                             ToolTip="Введите ваш логин"/>

                    <!-- Текущий пароль -->
                    <Label Grid.Row="2" Content="Текущий пароль:*" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox Grid.Row="3" x:Name="PbCurrentPassword" Height="35" Margin="0,0,0,10"
                                 ToolTip="Введите ваш текущий пароль"/>

                    <!-- Новый пароль -->
                    <Label Grid.Row="4" Content="Новый пароль:*" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox Grid.Row="5" x:Name="PbNewPassword" Height="35" Margin="0,0,0,10"
                                 ToolTip="Новый пароль должен содержать минимум 6 символов, только латинские буквы и цифры, хотя бы одну цифру и одну букву"/>

                    <!-- Подтверждение нового пароля -->
                    <Label Grid.Row="6" Content="Подтверждение:*" FontWeight="Bold" Margin="0,0,0,5"/>
                    <PasswordBox Grid.Row="7" x:Name="PbConfirmPassword" Height="35" Margin="0,0,0,15"
                                 ToolTip="Повторите новый пароль"/>

                    <!-- Требования к паролю -->
                    <Border Grid.Row="8" Background="{StaticResource SecondaryBrush1}" 
                            BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" 
                            Margin="0,0,0,15" Padding="10">
                        <TextBlock Text="Требования к паролю:&#10;• Минимум 6 символов&#10;• Только латинские буквы и цифры&#10;• Хотя бы одна цифра и одна буква&#10;• Не должен совпадать с текущим паролем" 
                                  FontSize="10" TextWrapping="Wrap"/>
                    </Border>

                    <!-- Сообщение об ошибках -->
                    <TextBlock Grid.Row="9" x:Name="TbError" Foreground="Red" FontSize="11" 
                              TextWrapping="Wrap" Margin="0,0,0,15" Visibility="Collapsed"/>

                    <!-- Кнопки -->
                    <StackPanel Grid.Row="10" Orientation="Horizontal" 
                                HorizontalAlignment="Center">
                        <Button x:Name="BtnChangePassword" Content="СМЕНИТЬ ПАРОЛЬ" 
                                Width="150" Height="40" Click="BtnChangePassword_Click" 
                                FontWeight="Bold" FontSize="12" Margin="0,0,10,0"/>
                        <Button x:Name="BtnCancel" Content="ОТМЕНА" Width="100" Height="40" 
                                Click="BtnCancel_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>