<Page x:Class="_322_Dorogan_Mihaela.Pages.CategoriesManagementPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Управление категориями">

    <Grid Background="{StaticResource PrimaryBrush1}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="УПРАВЛЕНИЕ КАТЕГОРИЯМИ" FontSize="16" FontWeight="Bold" 
                          VerticalAlignment="Center"/>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="BtnBack" Content="Назад" Width="80" Height="30"
                            Click="BtnBack_Click" Margin="0,0,10,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Панель поиска -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush1}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,0,0,1" 
                Padding="10" Margin="0,0,0,5">
            <StackPanel Orientation="Horizontal">
                <Label Content="Поиск:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="TbSearch" Width="300" Height="30" 
                         TextChanged="TbSearch_TextChanged" ToolTip="Поиск по названию категории"/>

                <Button x:Name="BtnClearSearch" Content="Очистить" Width="80" Height="30"
                        Click="BtnClearSearch_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Таблица категорий -->
        <DataGrid Grid.Row="2" x:Name="DgCategories" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding ID}" Width="50"/>
                <DataGridTextColumn Header="Название категории" Binding="{Binding Name}" Width="*"/>
                <DataGridTextColumn Header="Кол-во платежей" Binding="{Binding PaymentCount}" Width="120"/>
                <DataGridTemplateColumn Header="Действия" Width="120">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="✏️" ToolTip="Редактировать" 
                                        Click="BtnEditCategory_Click" Margin="2" Padding="5"
                                        Background="Transparent" BorderThickness="0"/>
                                <Button Content="🗑️" ToolTip="Удалить" 
                                        Click="BtnDeleteCategory_Click" Margin="2" Padding="5"
                                        Background="Transparent" BorderThickness="0"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель управления -->
        <Border Grid.Row="3" Background="{StaticResource SecondaryBrush2}" 
                BorderBrush="{StaticResource TextBrushBlack}" BorderThickness="0,1,0,0" 
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="BtnAddCategory" Content="➕ Добавить категорию" Width="160" Height="35"
                        Click="BtnAddCategory_Click" FontWeight="Bold" Margin="0,0,10,0"/>
                <Button x:Name="BtnRefresh" Content="🔄 Обновить" Width="100" Height="35"
                        Click="BtnRefresh_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>